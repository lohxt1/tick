{
  "name": "tick",
  "description": "ticketing app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm",
    "dev:conc": "conc npm:dev:proxy npm:dev",
    "dev": "next dev",
    "dev:proxy": "pnpm cf-bindings-proxy --ip 127.0.0.1",
    "migration": "drizzle-kit generate:sqlite --out migrations --schema lib/db/schema.ts",
    "build": "next build",
    "start": "next start --port ${PORT-3000}",
    "migrate": "drizzle-kit push:sqlite"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@libsql/client": "0.4.0-pre.5",
    "better-sqlite3": "^9.2.2",
    "cf-bindings-proxy": "^0.7.1",
    "clsx": "^2.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "nanoid": "^5.0.4",
    "next": "14.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.49.2",
    "tailwind-merge": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "pnpm": "^8.10.2",
    "postcss": "^8.4.32",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^4.1.3"
  }
}
